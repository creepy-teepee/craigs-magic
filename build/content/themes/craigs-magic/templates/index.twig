{% extends "base.twig" %}

{% block content %}
	<h1>News</h1>
	{% for post in posts %}
		{% if post.get_thumbnail %}
			<a href="{{ post.link }}"><img src="{{ post.thumbnail | resize(540, 360) }}" /></a>
		{% endif %}
		<h2>{{ post.title }}</h2>
		<p>{{ post.post_excerpt | nl2br }}</p>
		<p><a href="{{ post.link }}">Read more</a></p>
	{% endfor %}

	{% include 'includes/pagination.twig' with { type : 'news' } %}

{% endblock %}