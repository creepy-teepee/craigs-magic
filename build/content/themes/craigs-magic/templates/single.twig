{% extends "base.twig" %}

{% block content %}
	<div class="wrapper">
		<div class="band band--large">
			<h1 class="u-beta">{{post.title}}</h1>
			<div class="layout  layout--large">
				<div class="layout__item  u-1/2-lap-and-up">
					<div class="u-light-type  u-mb+">
						<p>{{post.date}}</p>
						{{post.content}}
					</div>
					<a href="/news" class="btn">News Archive</a>
				</div><!--
				--><div class="layout__item  u-1/2-lap-and-up">
					{% if post.get_thumbnail %}
						<img src="{{ post.thumbnail.src | resize(540, 360) }}" alt="{{post.thumbnail.title}}" class="u-mb+">
					{% endif %}
					{% if testimonial %}
						<blockquote class="u-mb+">
							{{testimonial.content}}
							<cite>{{testimonial.title}}</cite>
						</blockquote>
					{% endif %}
				</div>
			</div>
		</div>
	</div>
{% endblock %}